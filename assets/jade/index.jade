		.row
			.col-md-6
				img(src=src)
			.col-md-10.text-left
				p= titular
	mixin bloguero(name1, name2)
		.row
			.col-md-4
				img(src="assets/image/img_blogueros.jpg", alt="")
			.col-md-12
				p.chico= name1
				p.negro= name2
	mixin impreso(src, name1, name2)
		.row
			.col-md-8
				img(src=src)
			.col-md-8.text-left.impre
				p= name1
				p.rojo= name2
	mixin subtitulo (text)
		h4.columnistas-subtitulo= text
