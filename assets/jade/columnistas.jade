    mixin subtitulo (text)
        h4.columnistas-subtitulo= text
            img.arrow-cols(src="assets/image/double-arrow-bottom.png", alt="arrow")
    mixin columnas (titulo, src, alt, name, descripcion)
        .col-lg-5.col-md-5
            .columnas-box
                p Lunes, 14 de julio de 2015
                p= titulo
                .columnista-box
                    img(src=src, alt=alt)
                    p.name.text-left= name
                    p.descripcion-col.text-left= descripcion
    mixin columnista (src, name, descripcion)
        .col-lg-4.col-md-4 
